<!DOCTYPE html>
<html>
  <head>
    <title>Catalea</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-white bg-white">
      <a class="navbar-brand" href="#">
        <!-- <img src="/catalea/app/assets/images/Catalea-Logo.png" width="30" height="30" alt=""> -->
        <%= image_tag("/catalea/app/assets/images/Catalea_Logo.webp", {:style => "width:30px; height:30px"}) %>
      </a>
      <%= link_to "Catalea", root_path, class: "navbar-brand" %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <%= link_to "Nuestros productos", root_path, class: "nav-item nav-link" %>
          <%= link_to "Sugerencias de uso", root_path, class: "nav-item nav-link" %>
        </div>
      </div>
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      <%= link_to "Registro", new_user_registration_path, class: "nav-link" %>
    </nav>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
